	<ns1:InteiroInput id="ti_cep" x="694" y="312" width="140"/>
	<mx:Label x="526" y="342" text="UF:"/>
	<mx:ComboBox x="526" y="358" id="estado" selectedIndex="0" editable="false" dataProvider="{this.estados}">	
		</mx:ComboBox>
